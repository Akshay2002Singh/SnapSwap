# MongoDB Connection URI
uri=mongodb://localhost:27017/snapswap

# JWT Secret Key for authentication tokens
JWT_SECRET=your-secret-key-here

# Server Port
PORT=3003

# REDIS CONFIG
REDIS_URL=redis://default:password@localhost:6379

# WATERMARK DRIVER (PROCESSING METHOD)
WATERMARK_DRIVER=bullmq

# WATERMARK QUEUE SETTINGS

# Name of the BullMQ queue
WATERMARK_QUEUE_NAME=watermark-processing

# BullMQ concurrency (number of simultaneous jobs)
WATERMARK_BULL_CONCURRENCY=3

# Retry behavior for failed jobs
WATERMARK_JOB_ATTEMPTS=3
WATERMARK_JOB_BACKOFF_MS=5000

# Thread pool limits (used for fallback or standalone mode)
WATERMARK_THREADPOOL_MIN=1
WATERMARK_THREADPOOL_MAX=4